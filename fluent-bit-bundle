apiVersion: fleet.cattle.io/v1alpha1
kind: Bundle
metadata:
  name: fluent-bit-bundle
  namespace: fleet-logging
spec:
  helm:
    releaseName: fluent-bit
    repo: https://fluent.github.io/helm-charts
    chart: fluent-bit
    values:
      service:
        type: ClusterIP
      input:
        tail:
          path: "/var/log/containers/*.log"
      output:
        es:
          host: graylog-master.default
          port: 12201
